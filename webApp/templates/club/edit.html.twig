{% extends 'base.html.twig' %}

{% block title %}Edit Club{% endblock %}

{% block body %}
<div class="bg-gray-800 text-white p-4 shadow"> 
    <h1 class="text-2xl font-bold text-center my-4  dark:text-white ">Edit Club</h1>
</div>

<div class="flex flex-col items-center justify-center px-6 py-8 mx-auto md:h-screen lg:py-0">
    <div class="bg-white  text-black rounded-lg shadow-md p-6 dark:bg-gray-800 dark:border-gray-700">
            {{ include('club/_form.html.twig', { 'button_label': 'Update Club' }) }}

        <div class="mt-4 flex justify-between ">
            <a href="{{ path('app_club_index') }}" class="text-sm font-medium text-blue-600 hover:text-blue-800 dark:text-blue-400 dark:hover:text-blue-600">
                Back to list
            </a>
        </div>
        {% if is_granted('ROLE_ADMIN') %}
            <div class="text-sm font-medium text-yellow-500 hover:text-yellow-700 dark:text-yellow-400 dark:hover:text-yellow-600">
                {{ include('club/_delete_form.html.twig') }}
            </div>
        {% endif %}
        </div>
</div>
{% endblock %}
