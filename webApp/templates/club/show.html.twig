{% extends 'base.html.twig' %}

{% block title %}Club{% endblock %}

{% block body %}
    <h1>{{ club.name }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ club.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ club.name }}</td>
            </tr>
            <tr>
                <th>Island</th>
                <td>{{ club.island }}</td>
            </tr>
        </tbody>
    </table>

    {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('app_club_index') }}">back to list</a>
        <a href="{{ path('app_club_edit', {'id': club.id}) }}">edit</a>
        {{ include('club/_delete_form.html.twig') }}
        <button class="login-button" onclick="window.location.href='{{ path('dashboard_admin') }}'" >Back Dashboard</button>
    {% elseif is_granted('ROLE_USER') %}
        <button class="login-button" onclick="window.location.href='{{ path('dashboard_user') }}'" >Back Dashboard</button>
    {% endif %}

{% endblock %}
