{% extends 'base.html.twig' %}

{% block title %}Team index{% endblock %}

{% block body %}
    <h1>Team index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
               {#  <th>id_club_id</th> #}
                <th>Name</th>
                <th>Division</th>
                {# <th>Id_fighter</th> #}
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for team in teams %}
            <tr>
                <td>{{ team.id }}</td>
              {#   <td>{{ team.id_club_id }}</td> #}
                <td>{{ team.name }}</td>
                <td>{{ team.division }}</td>
               {#  <td>{{ team.idFighter }}</td> #}
                <td>
                    <a href="{{ path('app_team_show', {'id': team.id}) }}">show</a>
                    <a href="{{ path('app_team_edit', {'id': team.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_team_new') }}">Create new</a>
    {% if is_granted('ROLE_ADMIN') %}
         <button class="login-button" onclick="window.location.href='{{ path('dashboard_admin') }}'" >Back Dashboard</button>
    {% elseif is_granted('ROLE_USER') %}
        <button class="login-button" onclick="window.location.href='{{ path('dashboard_user') }}'" >Back Dashboard</button>
    {% endif %}
{% endblock %}
